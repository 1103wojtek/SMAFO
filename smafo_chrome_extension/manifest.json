{
	"name": "smafo",
	"description": "smafo extension for google chrome",
	"version": "1.0",
	"manifest_version": 2,

	"background": {

		"persistent": false,
		"scripts": ["background.js"]
	},


	"content_scripts": [

		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["lib/jquery-2.1.1.js","content.js"]
		}
	],


	"permissions": ["contextMenus", "tabs", "<all_urls>"],
	"icons": {
		"128": "smafo_logo.png"
	},

	"browser_action": {

		"default_icon": {
			"19": "smafo_logo.png"
		},

		"default_title": "SmaFo",
		"default_popup": "popup.html"
	}
}